{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@tests/*": ["../tests/*"],
      "@application/*": ["./application/*"],
      "@domain/*": ["./domain/*"],
      "@infrastructure/*": ["./infrastructure/*"],
      "@main/*": ["./main/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": []
}
